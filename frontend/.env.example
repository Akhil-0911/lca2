# Environment variables for EcoLCA Pro Frontend
# Copy this file to .env.local and customize for your environment

# API Configuration (Vite env vars must start with VITE_)
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=30000

# AI Model Configuration
VITE_ENABLE_REAL_AI_MODELS=false
VITE_FALLBACK_TO_MOCK=true

# Development Settings
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# Authentication (if required)
VITE_ENABLE_AUTH=false
VITE_AUTH_PROVIDER=jwt

# Feature Flags
VITE_ENABLE_COMPARISON_CHARTS=true
VITE_ENABLE_EXPORT_FUNCTIONALITY=true
VITE_ENABLE_RECOMMENDATIONS=true

# Performance Settings
VITE_ASSESSMENT_TIMEOUT=60000
VITE_CHART_ANIMATION_DURATION=1000

# External Services
VITE_ANALYTICS_ENABLED=false
VITE_ERROR_REPORTING_ENABLED=false